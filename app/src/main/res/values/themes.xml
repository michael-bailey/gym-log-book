<resources>
	<!-- Base application theme. -->
	<style name="Theme.Gym_Log_Book" parent="Theme.Material3.DynamicColors.DayNight">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@android:color/system_neutral1_10</item>
		<item name="colorPrimaryVariant">@android:color/system_accent1_600</item>
		<item name="colorOnPrimary">@android:color/system_accent1_200</item>

		<!-- Secondary brand color. -->
		<item name="colorSecondary">@android:color/system_neutral1_50</item>
		<item name="colorSecondaryVariant">@android:color/system_accent2_300</item>
		<item name="colorOnSecondary">@android:color/system_accent2_400</item>

		<!-- tertiary colours -->
		<item name="colorTertiary">@android:color/system_neutral1_10</item>
		<item name="colorTertiaryContainer">@android:color/system_neutral1_50</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimary</item>
		<item name="android:windowLightStatusBar">true</item>
		<!-- Nav bar colour -->
		<item name="android:navigationBarColor">?attr/colorSecondary</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Theme.Gym_Log_Book.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.Gym_Log_Book.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Theme.Gym_Log_Book.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
		<item name="backgroundColor">@android:color/system_accent2_600</item>
	</style>
</resources>